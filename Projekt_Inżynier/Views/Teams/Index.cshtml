@model IEnumerable<Projekcik.application.Teams.TeamDto>

@{
    ViewData["Title"] = "Lista Drużyn";
}

<h1>Lista Drużyn</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nową drużynę</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazwaDruzyny)
            </th>
            <th>
                Liczba Zawodników
            </th>
@*             <th>
                Roboty
            </th> *@
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.NazwaDruzyny)</b>
                </td>
                <td>
                    <span class="badge bg-secondary">@item.LiczbaZawodnikow</span>
                </td>
@*                 <td>
                    @if (item.NazwyRobotow != null && item.NazwyRobotow.Any())
                    {
                        @string.Join(", ", item.NazwyRobotow)
                    }
                    else
                    {
                        <span class="text-muted">Brak robotów</span>
                    }
                </td> *@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDruzyny" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.IdDruzyny" class="btn btn-sm btn-info">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.IdDruzyny" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>