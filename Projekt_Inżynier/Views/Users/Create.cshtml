@model Projekcik.application.Users.UsersDto

@{
    ViewData["Title"] = "Create";
}
@inject IConfiguration Config

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

<h1>Create</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Users/Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumerTelefonu" class="control-label"></label>
                <input asp-for="NumerTelefonu" class="form-control" />
                <span asp-validation-for="NumerTelefonu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Haslo" class="control-label"></label>
                <input asp-for="Haslo" class="form-control" />
                <span asp-validation-for="Haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Potwierdzhaslo" class="control-label"></label>
                <input asp-for="Potwierdzhaslo" class="form-control" />
                <span asp-validation-for="Potwierdzhaslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RozmiarKoszulki" class="control-label"></label>
                <select asp-for="RozmiarKoszulki" class="form-control"
                        asp-items="Html.GetEnumSelectList<Projekcik.application.Users.RozmiarKoszulkiTyp>()">
                    <option value="">-- wybierz rozmiar --</option>
                </select>
                <span asp-validation-for="RozmiarKoszulki" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wiek" class="control-label"></label>
                <input asp-for="Wiek" class="form-control" />
                <span asp-validation-for="Wiek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodPocztowy" class="control-label"></label>
                <input asp-for="KodPocztowy" class="form-control" />
                <span asp-validation-for="KodPocztowy" class="text-danger"></span>
            </div>

            <div class="g-recaptcha" data-sitekey="@Config["Recaptcha:SiteKey"]"></div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">
        Powrót do listy
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
