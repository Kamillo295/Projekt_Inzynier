@model IEnumerable<Projekcik.application.Users.UsersDto>

@{
    ViewData["Title"] = "Users";
}

<h1>Panel użytkownika</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        Dodaj nowego zawodnika
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdZawodnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumerTelefonu)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.Haslo)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RozmiarKoszulki)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wiek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KodPocztowy)
            </th>
            <th>
                Edycja i inne działania
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdZawodnika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumerTelefonu)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.Haslo)
            </td> *@
            <td>
                <a href="mailto:@item.Email" class="text-decoration-none">
                    @Html.DisplayFor(modelItem => item.Email)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RozmiarKoszulki)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wiek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KodPocztowy)
            </td>
            <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.IdZawodnika" class="btn btn-sm btn-outline-warning">
                            Edytuj
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdZawodnika" class="btn btn-sm btn-outline-primary">
                            Szczegóły
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdZawodnika" class="btn btn-sm btn-outline-danger">
                            Usuń
                        </a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
