@model Projekcik.application.Categories.CategoriesDetailsDto

@{
    ViewData["Title"] = "Szczegóły kategorii";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.NazwaKategorii</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.IdKategorii" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edytuj
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">Powrót</a>
    </div>
</div>
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100 border-success">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-robot"></i> Roboty</h5>
            </div>
            <div class="card-body">
                @if (Model.Roboty.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var robot in Model.Roboty)
                        {
                            <li class="list-group-item">
                                <i class="bi bi-gear-wide-connected"></i> @robot
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="alert alert-light text-center text-muted">
                        Ta drużyna nie posiada jeszcze żadnych robotów.
                    </div>
                }
            </div>
        </div>
    </div>
</div>