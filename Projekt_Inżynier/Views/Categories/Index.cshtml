@model IEnumerable<Projekcik.application.Categories.CategoryDto>

@{
    ViewData["Title"] = "Kategorie";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kategorie Robotów</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj nową kategorię
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%">
                        @Html.DisplayNameFor(model => model.NazwaKategorii)
                    </th>
                    <th style="width: 15%">
                        Liczba Robotów
                    </th>
@*                     <th>
                        Przykładowe Roboty
                    </th> *@
                    <th class="text-end" style="width: 25%">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <span class="fw-bold fs-5">@Html.DisplayFor(modelItem => item.NazwaKategorii)</span>
                        </td>
                        <td class="align-middle">
                            @if (item.LiczbaRobotow > 0)
                            {
                                <span class="badge bg-primary rounded-pill">@item.LiczbaRobotow</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary rounded-pill">0</span>
                            }
                      @*   </td>
                        <td class="align-middle text-muted">
                            @if (item.NazwyRobotow != null && item.NazwyRobotow.Any())
                            {
                                <small>@string.Join(", ", item.NazwyRobotow.Take(5)) @(item.LiczbaRobotow > 5 ? "..." : "")</small>
                            }
                            else
                            {
                                <small><em>Brak robotów w tej kategorii</em></small>
                            }
                        </td> *@
                        <td class="text-end align-middle">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.IdKategorii" class="btn btn-sm btn-outline-primary">
                                    Edytuj
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdKategorii" class="btn btn-sm btn-outline-info">
                                    Szczegóły
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdKategorii" class="btn btn-sm btn-outline-danger">
                                    Usuń
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-3 text-center">
        Brak kategorii. Dodaj pierwszą, aby móc przypisywać do niej roboty!
    </div>
}